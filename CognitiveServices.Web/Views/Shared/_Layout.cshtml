<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cognitive Services Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="masthead mb-auto">
            <div class="inner">
                <h3 class="masthead-brand">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Cognitive Services Web</a>
                </h3>
                <nav class="nav nav-masthead justify-content-center">
                    <a class="nav-link" onclick="setClick(this)" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                    <a class="nav-link" onclick="setClick(this)" asp-area="" asp-controller="Photo" asp-action="Index"><i class="fas fa-image"></i> Imagem</a>
                    <a class="nav-link" onclick="setClick(this)" asp-area="" asp-controller="Text" asp-action="Index"><i class="fas fa-font"></i> Texto</a>
                </nav>
            </div>
        </header>

        <main role="main" class="inner cover">
            @RenderBody()
        </main>

        <footer class="mastfoot mt-auto">
            <div class="inner">
                <p>&copy; 2020 - Cognitive Services Web | Build by <a href="https://github.com/LeaoSomogyi"><i class="fab fa-github"></i> LeaoSomogyi</a> </p>
            </div>
        </footer>
    </div>    
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
