@model TextViewModel
@{
    ViewData["Title"] = "Texto - Index";
}
@if (TempData["textError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["textError"]
    </div>
}
<span>O texto analisado será submetido a API de Análise de Texto e os resultados serão exibidos logo em seguida</span>
<br />
<span>Visite a <strong><a href="https://azure.microsoft.com/pt-br/services/cognitive-services/text-analytics/" target="_blank">página oficial do Azure</a></strong> para mais informações</span>
<form asp-action="Detect" asp-controller="Text" enctype="multipart/form-data">
    <div class="form-group mt-3">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1"><i class="fas fa-font"></i></span>
            </div>
            <input asp-for="Text" type="text" class="form-control" placeholder="Palavra ou frase" aria-label="Palavra ou frase" aria-describedby="basic-addon1">
        </div>        
    </div>
    <div class="form-group">
        <input type="submit" value="Visualizar Informações" class="btn btn-primary" />
    </div>
</form>

<script>
    let menu = document.querySelectorAll('.nav-link')[2];

    if (menu) {
        menu.classList.add('active')
    }
</script>